<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailActivity">
    <ProgressBar
        android:id="@+id/loadingDetail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        />
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/swap">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            >
            <TextView
                android:id="@+id/tvDetailId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID \t\t\t\t:"
                android:textStyle="bold"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/tvDetailStack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stack \t\t\t\t:"
                android:textStyle="bold"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/tvDetailStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status \t\t\t:"
                android:textStyle="bold"
                android:textSize="20sp"
                />
                    <TextView
                        android:id="@+id/tvDetailAmper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Amper \t\t\t\t:"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:id="@+id/tvDetailVoltage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Voltage \t\t\t\t:"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:id="@+id/tvDetailPower"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Power \t\t\t\t:"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:id="@+id/tvDetailEnergy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Energy \t\t\t\t:"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        />
            <TextView
                android:id="@+id/tvDetailDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date \t\t\t\t:"
                android:textStyle="bold"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/tvDetailTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time \t\t\t\t:"
                android:textStyle="bold"
                android:textSize="20sp"
                />
                    <Button
                        android:layout_marginTop="16dp"
                        android:id="@+id/btnActionDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ON"
                        android:textSize="20sp"
                        android:background="@color/teal_200"/>

        </LinearLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</RelativeLayout>